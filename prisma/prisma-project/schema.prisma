generator projectClient {
  provider = "prisma-client-js"
  output   = "./prisma-project" // Dossier où le client sera généré
}

datasource projectDB {
  provider = "mysql"
  url      = env("PROJECT_DATABASE_URL")
}

model Event {
  id        Int      @id @default(autoincrement())
  title     String
  subtitle  String?
  address   String?
  link      String?
  debutAt   DateTime
  finAt     DateTime
  fullDay   Boolean  @default(false)
  userId    String
  typeEvent String?  @default("1 fois")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserParrams {
  id     Int    @id @default(autoincrement())
  userId String @unique
  role   String @default("1")
  color  String @default("#ffffff")
}

model Grade {
  id        Int     @id @default(autoincrement())
  name      String
  listDroit String?
  societeId String
}

model Droit {
  id     Int     @id @default(autoincrement())
  name   String
  parent String?
}

model Societe {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  listChildren String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
