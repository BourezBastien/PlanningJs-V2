generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id        Int      @id @default(autoincrement())
  title     String
  subtitle  String?
  address   String?
  link      String?
  debutAt   DateTime
  finAt     DateTime
  fullDay   Boolean  @default(false)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id             Int       @id @default(autoincrement())
  societeId      Int?
  username       String    @unique
  email          String?   @unique
  verifiedEmail  Boolean   @default(false)
  token          String?
  dateValidToken DateTime?
  password       String?
  temp_password  String
  role           String    @default("1")
  color          String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Grade {
  id        Int     @id @default(autoincrement())
  name      String
  listDroit String?
  societeId String
}

model Droit {
  id     Int     @id @default(autoincrement())
  name   String
  parent String?
}

model Societe {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  listChildren String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
